{
  "compilerOptions": {
    "outDir": "dist",

    "target": "esnext",
    "moduleResolution": "node",

    "skipLibCheck": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../shared" }]
}
